<help-card key='settings.payment_types'></help-card>
<div class="inset">
  <md-button class="md-fab md-primary add-item-btn" ng-click="resourceDialog('settings/tax_group', 'new', taxGroups)">NEW</md-button>
  <div layout="row">
    <div class="flex-50">
      <h2>Tax Groups</h2>
    </div>
    <div class="flex-50" style="text-align: right;">
      <md-input-container>
        <label>Filter</label>
        <input ng-model="bussiness.filter" class="md-block" autofocus md-autofocus>
      </md-input-container>
    </div>
  </div>
  <md-list style="padding-top: 2px;">
    <md-list-item id="settings_tax_group_{{taxGroup.id}}" ng-repeat-start="taxGroup in taxGroups" ng-click="resourceDialog('settings/tax_group', taxGroup.id, taxGroups)">
      {{taxGroup.name}}
    </md-list-item>
    <md-divider ng-repeat-end></md-divider>
  </md-list>
</div>
